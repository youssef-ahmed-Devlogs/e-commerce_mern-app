extends baseEmail

block content
  p Welcome to MeStore #{firstName},
  p To verify your email open this link: #{link}.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='center')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${link}`, target='_blank') Verify your email
  p If you didn't do this sign up, please ignore this email!